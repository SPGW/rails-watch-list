<div class="container">
  <h2>List</h2>

  <%# List of Lists: %>
  <ul>
  <% @lists.each do |list|%>
    <li><%= link_to list.name, list_path(list)%></li>
    <%# button to delete %>
    <p><%= link_to "Delete", list_path(list),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></p>
    <% end %>
  </ul>
  <div>
    <%# Link to create new List %>
    <%= link_to 'New', new_list_path, class: "p-2 btn btn-primary"%>
  </div>
