<div class="container">
  <h2><%= @list.name  %></h2>

  <%# display all bookmarks %>
  <ul>
    <% @list.bookmarks.each do |bookmark|%>
      <li><p>Movie: <%= bookmark.movie.title %></p>
      <p> Comment: <%= bookmark.comment%> </p></li>
      <%# button to delete bookmark %>
      <%= link_to "Delete", bookmark_path(bookmark),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>

    <% end %>
  </ul>
  <%# button to create new bookmark %>
  <%= link_to 'Add new movie', new_list_bookmark_path(@list), class: "btn btn-primary"%>
<br>
<br>

  <%# Link to home page %>
  <%= link_to 'Home', lists_path, class: "btn btn-primary"%>
</div>
