<%# banner image %>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key%>');">
  <div class="container">
    <h1><%= @list.name %></h1>
    <br>
    <%= link_to 'Add new movie', new_list_bookmark_path(@list), class: "btn btn-primary"%>
  </div>
</div>

<div class="container">

  <%# display all bookmarks %>
  <ul>
    <% @list.bookmarks.each do |bookmark|%>
      <li><p>Movie: <%= bookmark.movie.title %></p>
      <p> Comment: <%= bookmark.comment%> </p></li>
      <%# button to delete bookmark %>
      <%= link_to "Delete", bookmark_path(bookmark),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>

    <% end %>
  </ul>
  <%# button to create new bookmark %>
  <%= link_to 'Add new movie', new_list_bookmark_path(@list), class: "btn btn-primary"%>
<br>
<br>

  <%# Link to home page %>
  <%= link_to 'Home', lists_path, class: "btn btn-primary"%>
</div>
